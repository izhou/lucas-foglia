{% extends "layouts/base.njk" %}

{%block gridTopLeft %}

<div class="l-grid-top">
<h1 class="sidebar-header">{{metadata.title}}</h1>
  {%- for item in metadata.sidebar -%}
    {%if item.header %}<h2 class="sidebar-subheader">{{item.header}}</h2>{% endif %}
    {%if item._type== "project" %}
      <a class="sidebar-item" href="/projects/{{item.slug}}">{{item.title}}</a>
    {% endif %}


  {%- endfor -%}
</div>
{%endblock%}
